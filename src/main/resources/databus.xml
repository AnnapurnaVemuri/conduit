   <!--<PublishDir>/databus/streams/</PublishDir>-->
 </Config>

 <Streams>
   <Stream streamname="beacon">
     <Sources>
       <Source>
         <name>uj1</name>
       </Source>
     </Sources>
   </Stream>
 </Streams>
 
 <Clusters>
