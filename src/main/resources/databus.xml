<Databus>
  <Config>
    <RootDir>/databus</RootDir>
    <ZookeeperConnectString>gs1104.grid.corp.inmobi.com:2188</ZookeeperConnectString>
  </Config>

  <!-- A stream can have only one primary and multiple mirrors as destinations

  -->
  <Streams>
    <Stream name="metric_billing">
      <Sources>
        <Source>
          <name>uj1</name>
          <retentionInDays>2</retentionInDays>
        </Source>
        <Source>
          <name>er1</name>
          <retentionInDays>2</retentionInDays>
        </Source>
      </Sources>
      <Destinations>
        <Destination>
          <name>ua2</name>
          <retentionInDays>1</retentionInDays>
          <primary>true</primary>
        </Destination>
        <Destination>
          <name>uj1</name>
          <retentionInDays>1</retentionInDays>
        </Destination>
      </Destinations>
    </Stream>
  </Streams>

  <Clusters>
    <Cluster name="uj1" hdfsUrl="hdfs://gs1104.grid.corp.inmobi.com:8020/" jtUrl="gs1104.grid.corp.inmobi.com:8021">
      <Zookeeper>
        <connectionString>gs1104.grid.corp.inmobi.com:2188</connectionString>
      </Zookeeper>
    </Cluster>

    <Cluster name="er1" hdfsUrl="hdfs://gs1103.grid.corp.inmobi.com:8020/" jtUrl="gs1103.grid.corp.inmobi.com:8023">
      <Zookeeper>
        <connectionString>gs1104.grid.corp.inmobi.com:2188</connectionString>
      </Zookeeper>
    </Cluster>

    <Cluster name="ua2" hdfsUrl="hdfs://localhost:8020/" jtUrl="localhost:8021">
      <Zookeeper>
        <connectionString>gs1104.grid.corp.inmobi.com:2188</connectionString>
      </Zookeeper>
    </Cluster>
  </Clusters>
</Databus>