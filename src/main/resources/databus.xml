<Databus>
  <Config>
    <RootDir>/databus</RootDir>
    <InputDir>/databus/data</InputDir>
    <PublishDir>/databus/streams/</PublishDir>
  </Config>

  <Streams>
    <Stream streamname="beacon">
      <Sources>

        <Source>
          <name>er</name>
        </Source>

        <Source>
          <name>uj</name>
        </Source>

      </Sources>
    </Stream>

    <Stream streamname="rr">
      <Sources>

        <Source>
          <name>ua1</name>
        </Source>

        <Source>
          <name>ua2</name>
        </Source>

      </Sources>
    </Stream>
  </Streams>
  
  <Clusters>
    <Cluster name="ua2" hdfsUrl="hdfs://ua1">
      <ConsumeStreams>

        <ConsumeStream>
          <name>beacon</name>
          <retentionHours>24</retentionHours>
        </ConsumeStream>

        <ConsumeStream>
          <name>rrlogs</name>
          <retentionHours>24</retentionHours>
        </ConsumeStream>

      </ConsumeStreams>
    </Cluster>

    <Cluster name="ua2" hdfsUrl="hdfs://ua2">
      <ConsumeStreams>

        <ConsumeStream>
          <name>beacon1</name>
          <retentionHours>24</retentionHours>
        </ConsumeStream>

        <ConsumeStream>
          <name>beacon2</name>
          <retentionHours>48</retentionHours>
       </ConsumeStream>

      </ConsumeStreams>
    </Cluster>
  </Clusters>
</Databus>