<Databus>
  <Config>
    <RootDir>/databus</RootDir>
  </Config>

  <Streams>
    <Stream streamname="metric_billing">
      <Sources>
        <Source>
          <name>uj1</name>
        </Source>
      </Sources>
    </Stream>
  </Streams>

  <Clusters>
    <Cluster name="uj1" hdfsUrl="hdfs://localhost:54310/" jtUrl="localhost:54311">
    </Cluster>

    <Cluster name="uj2" hdfsUrl="hdfs://localhost:54310/" jtUrl="localhost:54311">
      <Config>
        <RootDir>/databus/uj2</RootDir>
      </Config>
      <ConsumeStreams>
        <ConsumeStream>
          <name>metric_billing</name>
          <retentionHours>24</retentionHours>
        </ConsumeStream>
      </ConsumeStreams>
    </Cluster>
  </Clusters>
</Databus>