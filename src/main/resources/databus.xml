<databus>
  <defaults>
    <rootdir>/databus</rootdir>
    <retentionindays>2</retentionindays>
  </defaults>

  <!-- A stream can have only one primary and multiple mirrors as destinations
    -->
  <streams>
    <stream name="rtbi_metrics">
      <sources>
        <source>
          <name>ua2</name>
          <retentionindays>2</retentionindays>
        </source>
        <source>
          <name>uj1</name>
          <retentionindays>2</retentionindays>
        </source>
      </sources>
      <destinations>
        <destination>
          <name>ua2</name>
          <retentionindays>1</retentionindays>
          <primary>true</primary>
        </destination>
        <destination>
          <name>uj1</name>
          <retentionindays>1</retentionindays>
        </destination>
      </destinations>
    </stream>
  </streams>

  <clusters>
    <cluster name="ua2" hdfsurl="hdfs://gs1138.red.ua2.inmobi.com:54310/"
             jturl="gs1139.red.ua2.inmobi.com:54311">
    </cluster>

    <cluster name="uj1" hdfsurl="hdfs://gs3103.red.uj1.inmobi.com:54310"
             jturl="gs3104.red.uj1.inmobi.com:54311">
    </cluster>

  </clusters>
</databus>
