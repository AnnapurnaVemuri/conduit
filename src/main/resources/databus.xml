<databus>
  <defaults>
    <rootdir>/databus</rootdir>
    <retentionindays>2</retentionindays>
  </defaults>

  <!-- A stream can have only one primary and multiple mirrors as destinations
    -->
  <streams>
    <stream name="metric_billing">
      <sources>
        <source>
          <name>uj1</name>
          <retentionindays>2</retentionindays>
        </source>
        <source>
          <name>uj2</name>
          <retentionindays>2</retentionindays>
        </source>
      </sources>
      <destinations>
        <destination>
          <name>ua1</name>
          <retentionindays>1</retentionindays>
          <primary>true</primary>
        </destination>
        <destination>
          <name>uj1</name>
          <retentionindays>1</retentionindays>
        </destination>
      </destinations>
    </stream>
  </streams>

  <clusters>
    <cluster name="uj1" hdfsurl="hdfs://gs1104.grid.corp.inmobi.com:8020/" jturl="gs1104.grid.corp.inmobi.com:8021">
    </cluster>

    <cluster name="uj2" hdfsurl="hdfs://gs1103.grid.corp.inmobi.com:8020/" jturl="gs1103.grid.corp.inmobi.com:19023">
    </cluster>

    <cluster name="ua1" hdfsurl="hdfs://localhost:8020/" jturl="localhost:8021">
    </cluster>
  </clusters>
</databus>
